<div class="container-fluid">
	<% if session[:act] == "show" %>
		<div class="row col-xs-10 col-xs-offset-1">
	<% else %>
		<div class="row col-xs-9 col-xs-offset-1">
	<% end %>
		<span>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Auto-follow</th>
							<th>#</th>
							<th>Time</th>
							<th>Follow/Hang Time</th>
							<th>Purpose</th>
							<th>Called</th>
							<th>Page #</th>
						</tr>
					</thead>
					<tbody id="list-cues">
						<% if @show.cues.any? %>
							<% @cues.each do |q| %>
								<% if session[:act] == "show" %>
									<tr id="cue-row-<%= q.id %>">
								<% else %>
									<tr id="cue-row-<%= q.id %>" data-link="<%= edit_cue_path(q) %>">
								<% end %>
									<td>
										<% if q.auto_follow == true %>
											<span class="glyphicon glyphicon-ok-circle auto-follow-check"></span>
										<% end %>
									</td>
									<td><%= decimal_format(q.number) %></td>
									<td><%= decimal_format(q.time) %></td>
									<td>
									<% if q.follow == 1 %>
										F - <%= decimal_format(q.follow_time) %>
									<% elsif q.follow == 2 %>
										H - <%= decimal_format(q.follow_time) %>
									<% elsif q.follow == 0 %>
									<% else %>
										Error
									<% end %>
									</td>
									<td><%= q.purpose %></td>
									<td><%= q.called %></td>
									<td><%= q.page %></td>
								</tr>
							<% end %>
						<% else %>
							<tr id="empty-text"><td>This show has no cues.  Start creating cues now.</td></tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</span>
	</div>
	<div id="delete-cue-part">
		<%= render partial: "delete_cues", locals: {cues: @cues, defaults: @defaults} %>
	</div>
</div>
<script type="text/javascript">
	jQuery(function($){
		$("tr[data-link]").click(function(){
			window.location = this.dataset.link
		});
	});
</script>