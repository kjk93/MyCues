<div class="container-fluid">
	<div class="row col-xs-10 col-xs-offset-1">
		<span>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Auto-follow</th>
							<th>#</th>
							<th>Time</th>
							<th>Follow/Hang Time</th>
							<th>Purpose</th>
							<th>Called</th>
							<th>Page #</th>
							<th>Delete</th>
						</tr>
					</thead>
					<tbody>
						<% @cues.each do |q| %>
							<tr data-link="<%= edit_cue_path(q) %>">
								<td>
									<% if q.auto_follow == true %>
										<span class="glyphicon glyphicon-ok-circle auto-follow-check"></span>
									<% else %>
									<% end %>
								</td>
								<td><%= q.number %></td>
								<td><%= q.time %></td>
								<td>
								<% if q.follow == 1 %>
									F - <%= q.follow_time %>
								<% elsif q.follow == 2 %>
									H - <%= q.follow_time %>
								<% elsif q.follow == 0 %>
								<% else %>
									Error
								<% end %>
								</td>
								<td><%= q.purpose %></td>
								<td><%= q.called %></td>
								<td><%= q.page %></td>
								<td>
									<%= link_to cue_path(q), method: :delete do%>
										<span class="glyphicon glyphicon-remove"></span>
									<% end %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</span>
	</div>
</div>