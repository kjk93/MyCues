<div class="container-fluid">
	<div class="row">
		<div class="col-xs-12">
			<%= form_for @cue do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-group col-xs-1">
				<%= f.label :number %>
				<%= f.number_field :number, class: "form-control" %>
			</div>
			<div class="form-group col-xs-1">
				<%= f.label :time %>
				<%= f.number_field :time, class: "form-control" %>
			</div>
			<div class="form-group col-xs-1">
				<%= f.label :follow, "Follow Type" %>
				<%= f.label :follow, class: "radio follow"  do %>
					<%= f.radio_button :follow, 0, checked: true %>None
				<% end %>
				<%= f.label :follow, class: "radio follow" do %>
					<%= f.radio_button :follow, 1%>Follow
				<% end %>
				<%= f.label :follow, class: "radio follow" do %>
					<%= f.radio_button :follow, 2%>Hang
				<% end %>
			</div>
			<div class="form-group col-xs-2">
				<%= f.label :follow_time, "Follow/Hang Time" %>
				<%= f.number_field :follow_time, class: "form-control" %>
			</div>
			<div class="form-group col-xs-3">
				<%= f.label :purpose %>
				<%= f.text_field :purpose, class: "form-control" %>
			</div>
			<div class="form-group col-xs-1">
				<%= f.label :page %>
				<%= f.number_field :page, class: "form-control" %>
			</div>
			<div class="form-group col-xs-2">
				<%= f.label :auto_follow, "Auto-Follow?" %>
				<%= f.label :auto_follow, class: "checkbox", id: "follow-check" do %>
					<%= f.check_box :auto_follow %>
				<% end %>
			</div>
			<div>
				<%= hidden_field_tag :show_id, @show.id %>
			</div>
			<div class="form-group col-xs-1">
				<%= f.submit "Add Cue", class: "btn btn-primary btn-large" %>
			</div>
			<% end %>
		</div>
	</div>
</div>