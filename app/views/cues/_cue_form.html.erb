<div class="container-fluid">
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<%= form_for(@cue, html:{class: "form-horizontal"}) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<div class="form-group">
				<%= f.label :auto_follow, class: "checkbox" do %>
					<%= f.check_box :auto_follow %>
					Auto Follow
				<% end %>
			</div>
			<div class="form-group">
				<%= f.label :number %>
				<%= f.text_field :number, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :time %>
				<%= f.text_field :time, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :follow %>
				<%= f.text_field :follow, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :follow_time, "Follow Time" %>
				<%= f.text_field :follow_time, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :purpose %>
				<%= f.text_field :purpose, class: "form-control" %>
			</div>
			<div class="form-group">
				<%= f.label :page %>
				<%= f.text_field :page, class: "form-control" %>
			</div>
			<div>
				<%= hidden_field_tag :show_id, @show.id %>
			</div>
			<div class="form-group">
				<%= f.submit "Add Cue", class: "btn btn-primary btn-large" %>
			</div>
			<% end %>
		</div>
	</div>
</div>