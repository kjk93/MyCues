<% provide(:title, "Home") %>

<div class="container-fluid">
	<div class="col-xs-6 col-xs-offset-3">
		<div class="row">
			<h1 class="main-text">Welcome to MyQs Beta!</br></h1>
		</div>
		<div class="row">
			<h3 class="second-text">
				Feel free to sign up and start writing cues for your shows.</br></br>
				Please submit any bugs and suggestions
			</h3>
		</div>
		<div class="row">
			<% if logged_in? %>
				<%= link_to "Sign Up", '#', class: "btn btn-primary btn-lg", id: "sign-up-btn" %>
			<% else %>
				<%= link_to "Sign Up", new_user_path, class: "btn btn-primary btn-lg", id: "sign-up-btn" %>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript">
	<% if logged_in? %>
		console.log("ME");
		$("#sign-up-btn").attr("disabled", "disabled");
	<% end %>
</script>