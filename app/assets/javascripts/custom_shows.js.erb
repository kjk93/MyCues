function add_hover_event(){
	$('.cue-row').hover(
		function(){
			$(this).css("background-color", "rgba(36, 198, 227, .25)");
			$('#add-cue-after-' + $(this).data("id")).animate({
				opacity: 1
			}, 200, "linear");
		},
		function(){
			$(this).css("background-color", "");
			$('#add-cue-after-' + $(this).data("id")).animate({
				opacity: 0
			}, 0, "linear");
		}
	);
}